<h1> <%= @cocktail.name %> </h1>


<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>


<ul class="list-group">
  <div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, input_html: {style: 'width: 200px'} %>
      <%= f.association :ingredient %>
      <%= f.button :submit, input_html: {style: 'width: 200px'} %>
    <% end %>
  </div>
</ul>


 <ul class="list-group">
    <div class="container"
    <% @cocktail.doses.each do |dose| %>
      <% if dose.persisted? %>
        <li class="list-group-item">
          <p><%= dose.description %> <%= dose.ingredient.name %></p>
          <p><%= link_to "Delete this dose", dose_path(dose), method: :delete %></p>
        </li>
      <% end %>
    <% end %>
    </div>
  </ul>

<div class="container">
  <% if @cocktail.photos? %>
    <% @cocktail.photos.each do |photo| %>
      <%= cl_image_tag photo.path, width: 200, height: 300, crop: :fill %>
    <% end %>
  <% end %>
</div>

<p><%= link_to "Delete this cocktail", cocktail_path(@cocktail), class: "btn btn-danger", method: :delete %></p>
